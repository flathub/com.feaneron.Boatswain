{
    "app-id": "com.feaneron.Boatswain",
    "runtime": "org.gnome.Platform",
    "runtime-version": "43",
    "sdk": "org.gnome.Sdk",
    "command": "boatswain",
    "finish-args": [
        "--device=all",
        "--socket=pulseaudio",
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.mpris.MediaPlayer2.*"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        "shared-modules/libusb/libusb.json",
        {
            "name": "hidapi",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/libusb/hidapi.git",
                    "tag": "hidapi-0.12.0",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^hidapi-([\\d.]+)$"
                    },
                    "commit": "76108294092c023a4ece99eb3219559cea0d5066"
                }
            ]
        },
        {
            "name": "gusb",
            "buildsystem": "meson",
            "config-opts": [
                "-Ddocs=false",
                "-Dtests=false",
                "-Dvapi=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://people.freedesktop.org/~hughsient/releases/libgusb-0.3.10.tar.xz",
                    "sha256": "0eb0b9ab0f8bba0c59631c809c37b616ef34eb3c8e000b0b9b71cf11e4931bdc"
                }
            ]
        },
        {
            "name": "libpeas",
            "buildsystem": "meson",
            "cleanup": [
                "/bin/*",
                "/lib/peas-demo"
            ],
            "config-opts": [
                "-Dglade_catalog=false",
                "-Ddemos=false",
                "-Dgtk_doc=false",
                "-Dwidgetry=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libpeas/1.34/libpeas-1.34.0.tar.xz",
                    "sha256": "4305f715dab4b5ad3e8007daec316625e7065a94e63e25ef55eb1efb964a7bf0",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "libpeas"
                    }
                }
            ]
        },
        {
            "name": "libportal",
            "buildsystem": "meson",
            "config-opts": [
                "-Dbackends=gtk4",
                "-Ddocs=false",
                "-Dtests=false",
                "-Dvapi=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/flatpak/libportal.git",
                    "tag": "0.6"
                }
            ]
        },
        {
            "name": "boatswain",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/World/boatswain.git",
                    "tag": "0.2.1",
                    "commit": "e9529fe6e190a87789dabaaf83f4c9be6c6615eb"
                }
            ]
        }
    ]
}