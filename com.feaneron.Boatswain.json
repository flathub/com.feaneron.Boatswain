{
    "app-id": "com.feaneron.Boatswain",
    "runtime": "org.gnome.Platform",
    "runtime-version": "45",
    "sdk": "org.gnome.Sdk",
    "command": "boatswain",
    "finish-args": [
        "--device=all",
        "--socket=pulseaudio",
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.mpris.MediaPlayer2.*"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        "shared-modules/libusb/libusb.json",
        {
            "name": "hidapi",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/libusb/hidapi.git",
                    "tag": "hidapi-0.14.0",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^hidapi-([\\d.]+)$"
                    },
                    "commit": "d3013f0af3f4029d82872c1a9487ea461a56dee4"
                }
            ]
        },
        {
            "name": "gusb",
            "buildsystem": "meson",
            "config-opts": [
                "-Ddocs=false",
                "-Dtests=false",
                "-Dvapi=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/hughsie/libgusb.git",
                    "tag": "0.4.8",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^([\\d.]+)$"
                    },
                    "commit": "ea074426660eb78199106767d826db9ea0fc8734"
                }
            ]
        },
        {
            "name": "gjs",
            "buildsystem": "meson",
            "config-opts": [
                "-Dinstalled_tests=false",
                "-Dskip_dbus_tests=true",
                "-Dskip_gtk_tests=true"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gjs/1.78/gjs-1.78.3.tar.xz",
                    "sha256": "42d50364caa5d792c76734fe5bbcc4b9dbb48819da20a4060061e8b9526134a4",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "gjs"
                    }
                }
            ]
        },
        {
            "name": "libpeas",
            "buildsystem": "meson",
            "cleanup": [
                "/bin/*",
                "/lib/peas-demo"
            ],
            "config-opts": [
                "-Dgtk_doc=false",
                "-Dlua51=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libpeas/2.0/libpeas-2.0.1.tar.xz",
                    "sha256": "9ddc1d51f38663da4df52163051b7b2cea3a242cfaee9f5a7e140f0784c8aa77",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "libpeas"
                    }
                }
            ]
        },
        {
            "name": "libportal",
            "buildsystem": "meson",
            "config-opts": [
                "-Dbackend-gtk3=disabled",
                "-Dbackend-gtk4=enabled",
                "-Dbackend-qt5=disabled",
                "-Ddocs=false",
                "-Dtests=false",
                "-Dvapi=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/flatpak/libportal.git",
                    "tag": "0.7.1"
                }
            ]
        },
        {
            "name": "boatswain",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/World/boatswain.git",
                    "tag": "0.4.0",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^([\\d.]+)$"
                    },
                    "commit": "c7049d3d4f054bd360ea61728a643a1d7020a601"
                }
            ]
        }
    ]
}
