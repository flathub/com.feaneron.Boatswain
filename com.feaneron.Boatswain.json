{
    "app-id": "com.feaneron.Boatswain",
    "runtime": "org.gnome.Platform",
    "runtime-version": "45",
    "sdk": "org.gnome.Sdk",
    "command": "boatswain",
    "finish-args": [
        "--device=all",
        "--socket=pulseaudio",
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.mpris.MediaPlayer2.*"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        "shared-modules/libusb/libusb.json",
        {
            "name": "hidapi",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/libusb/hidapi.git",
                    "tag": "hidapi-0.14.0",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^hidapi-([\\d.]+)$"
                    },
                    "commit": "d3013f0af3f4029d82872c1a9487ea461a56dee4"
                }
            ]
        },
        {
            "name": "gusb",
            "buildsystem": "meson",
            "config-opts": [
                "-Ddocs=false",
                "-Dtests=false",
                "-Dvapi=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/hughsie/libgusb.git",
                    "tag": "0.4.7",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^([\\d.]+)$"
                    },
                    "commit": "94f907cbf150eea97c7a44caaade35b0af5707a3"
                }
            ]
        },
        {
            "name": "libpeas",
            "buildsystem": "meson",
            "cleanup": [
                "/bin/*",
                "/lib/peas-demo"
            ],
            "config-opts": [
                "-Dglade_catalog=false",
                "-Ddemos=false",
                "-Dgtk_doc=false",
                "-Dwidgetry=false"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libpeas/2.0/libpeas-2.0.0.tar.xz",
                    "sha256": "5407acbc0c12f790f70c9d2b98224acc1be3ac449c60603b8192ca020b497011",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "libpeas"
                    }
                }
            ]
        },
        {
            "name": "libportal",
            "buildsystem": "meson",
            "config-opts": [
                "-Dbackends=gtk4",
                "-Ddocs=false",
                "-Dtests=false",
                "-Dvapi=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/flatpak/libportal.git",
                    "tag": "0.6"
                }
            ]
        },
        {
            "name": "boatswain",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/World/boatswain.git",
                    "tag": "0.3.0",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^([\\d.]+)$"
                    },
                    "commit": "e176cfd490790b3a0e1bd27a2602b3f4241b6a3b"
                }
            ]
        }
    ]
}
